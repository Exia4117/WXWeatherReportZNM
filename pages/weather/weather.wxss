/* pages/weather/weather.wxss */

.weather-basic {
  height: 550rpx;
  text-align: left;
  color: #666;
  display: flex;
  flex-direction: row;
}

.city {
  /*城市信息*/
  text-align: center;
  position: relative;
  top: 10rpx;
  left: 0rpx;
  width: 750rpx;
  height: 50rpx;
  border-radius: 25rpx;
}


/* .weather-basic image {
