/*天气额外信息，包括湿度，风力*/

.weather-extra image {
  height: 32rpx;
  width: 32rpx;
}

/* .weather-extra .tip {
  font-size: 10rpx;
  color: lightgray;
} */

.weather-extra .item {
  width: 33%;
}

.weather-extra .line {
  width: 1rpx;
  height: 90rpx;
  background: #eee;
}

/*分天/小时的天气信息*/

.weather-detail {
  margin-top: 20rpx;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
}


.weather-detail .item-daily {
  width: 150rpx;
  height: 300rpx;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
  color: gray;
  margin: 40rpx;
  border: 1rpx lightgray solid;
  border-radius: 10rpx;
  line-height: 300%;
  font-weight: bold;
}






