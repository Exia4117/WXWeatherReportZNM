} */

.weather-basic .temperature {
  font-size: 190rpx;
  margin-top: 100rpx;
  margin-left: 20rpx;
}

.weather-basic .temperature .unit {
  font-size: 75rpx;
  vertical-align: text-bottom;
  margin-left: -10rpx;
}

.weather-basic .weather-extra {
  margin-top: 200rpx;
  margin-left: 20rpx;
  /* height: 110rpx; */
  text-align: left;
  font-size: 13rpx;
  color: gray;
}

.weather-basic .weather-extra .weather {
  margin-left: 10rpx;
  font-size: 30rpx;
  /* margin-top: 200rpx; */
  vertical-align: text-bottom;
}

