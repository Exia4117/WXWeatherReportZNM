/* pages/hour/index.wxss */
.canvas{
  width:100%;
  height: 100%;
  transform: scale(0.9);
}
.chart{
  margin:0 auto;
  display: flex;
  width: 100%;
  height: 600rpx;
  justify-content: center;
  padding-bottom: 60rpx;
}
.container{
  position: absolute;
  left: 0;
  top:0;
  width: 100%;
  padding:0;
  margin: 0;
  height: 100%;
  display: block;
}

.weather-detail {
  margin-top: 20rpx;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
}
.weather-detail .item-hourly {
  width: 150rpx;
  height: 400rpx;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
  color: gray;
  margin: 40rpx;
  border: 1rpx lightgray solid;
  border-radius: 10rpx;
  line-height: 300%;
  font-weight: bold;
}